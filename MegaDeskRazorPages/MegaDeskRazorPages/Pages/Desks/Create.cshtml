@page
@model MegaDeskRazorPages.Pages.Desks.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Desk</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Desk.width" class="control-label"></label>
                <input asp-for="Desk.width" class="form-control" />
                <span asp-validation-for="Desk.width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desk.depth" class="control-label"></label>
                <input asp-for="Desk.depth" class="form-control" />
                <span asp-validation-for="Desk.depth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desk.drawers" class="control-label"></label>
                <select asp-for="Desk.drawers" class="form-control">
                    <option value="0">0</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                </select>
                <span asp-validation-for="Desk.drawers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desk.surfaceMaterial" class="control-label"></label>
                <select asp-for="Desk.surfaceMaterial" class="form-control">
                    @foreach (var material in Model.Desk.surfaceMaterial)
                    {
                        <option value="@material">@material</option>
                    }
                </select>
                <span asp-validation-for="Desk.surfaceMaterial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
